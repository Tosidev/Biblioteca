@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Adicionar Livro";
    var autores = ViewData["Autores"] as List<string> ?? new List<string>(); // Garante que autores não seja nulo
    var assuntos = ViewData["Assuntos"] as List<string> ?? new List<string>(); // Garante que assuntos não seja nulo
}

<h1>Adicionar Livro</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataPublicacao" class="control-label"></label>
        <input asp-for="DataPublicacao" class="form-control" type="date" />
        <span asp-validation-for="DataPublicacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AutorNome" class="control-label">Nome do Autor</label>
        <select id="AutorNome" name="NovoAutor" class="form-control">
            <option value="">Selecione um autor</option>
            @foreach (var autor in autores)
            {
                <option value="@autor">@autor</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="NovoAssunto" class="control-label">Assunto</label>
        <select id="NovoAssunto" name="NovoAssunto" class="form-control">
            <option value="">Selecione um assunto</option>
            @foreach (var assunto in assuntos)
            {
                <option value="@assunto">@assunto</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <label for="FormaCompra" class="control-label">Forma de Compra</label>
        <select id="FormaCompra" name="FormaCompra" class="form-control">
            <option value="">Selecione a forma de compra</option>
            <option value="Online">Online</option>
            <option value="Loja Física">Loja Física</option>
            <option value="Feira de Livros">Feira de Livros</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Preco" class="control-label">Preço</label>
        <input id="Preco" name="Preco" class="form-control" type="text" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
