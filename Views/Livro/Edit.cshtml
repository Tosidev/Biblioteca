@model Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";
    var autores = ViewData["Autores"] as List<string> ?? new List<string>(); // Garante que autores nunca será nulo
    var autorAtual = ViewData["AutorAtual"] as string;
}

<h1>Editar Livro</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="LivroId" />
    
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="DataPublicacao" class="control-label"></label>
        <input asp-for="DataPublicacao" class="form-control" type="date" value="@Model.DataPublicacao.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DataPublicacao" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Autor</label>
        <input name="AutorNome" value="@Model.LivroAutores.FirstOrDefault()?.Autor?.Nome" class="form-control" />
    </div>

    <!--<div class="form-group">
        <label for="AutorNome" class="control-label">Nome do Autor</label>
        <select id="AutorNome" name="NovoAutor" class="form-control">            
            <option value="">@ViewData["AutorAtual"]</option>
            @foreach (var autor in autores)
            {
                var isSelected = autor == autorAtual ? "selected=\"selected\"" : "";
                <option value="@autor">@autor</option>
            }
        </select>
    </div>-->

    <div class="form-group">
        <label>Assunto</label>
        <input name="AssuntoDescricao" value="@Model.LivroAssuntos.FirstOrDefault()?.Assunto?.Descricao" class="form-control" />
    </div>

    <div class="form-group">
        <label>Forma de Compra</label>
        <!--<input name="FormaCompra" value="@ViewData["FormaCompra"]" class="form-control" />-->

        <select id="FormaCompra" name="FormaCompra" class="form-control">
            <!-- Exibe o valor atual salvo no banco de dados como a primeira opção -->
            <option value="">@ViewData["FormaCompra"]</option>
            <option value="Online">Online</option>
            <option value="Loja Física">Loja Física</option>
            <option value="Feira de Livros">Feira de Livros</option>
        </select>

    </div>

    <div class="form-group">
        <label>Preço</label>
        <input name="Preco" value="@(ViewData["Preco"] != null ? string.Format("{0:F2}", ViewData["Preco"]) : "0.00")" class="form-control" type="text" />
        <span class="text-danger">@ViewData["PrecoError"]</span>
    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
